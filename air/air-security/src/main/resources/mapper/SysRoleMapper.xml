<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jayjay.air.security.mapper.SysRoleMapper">
    <!-- 根据用户ID查询角色 -->
    <select id="findRoleByUserId" resultType="org.jayjay.air.security.entity.SysRole" parameterType="string">
        SELECT
            r.*
        FROM
            sys_role r
                LEFT JOIN sys_user_role ur ON ur.role_id = r.id
        WHERE
            ur.user_id = #{userId}
    </select>
</mapper>
